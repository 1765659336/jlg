{
	"compilerOptions": {
		"composite": true,
		"skipLibCheck": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"src/packages/**/*.ts",
		"src/packages/**/*.d.ts",
		"src/packages/**/*.tsx",
		"src/packages/**/*.vue",
		"auto-imports.d.ts",
	],
	"exclude": [
		"dist",
		"node_modules"
	],
}