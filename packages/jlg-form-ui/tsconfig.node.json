{
	"compilerOptions": {
		"composite": true,
		"skipLibCheck": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"packages/**/*.ts",
		"packages/**/*.d.ts",
		"packages/**/*.tsx",
		"packages/**/*.vue",
		"auto-imports.d.ts",
	],
	"exclude": [
		"dist",
	]
}